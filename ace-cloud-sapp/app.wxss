/**app.wxss**/
@import "/vantyle/index.wxss";
@import '/assets/fonts/iconfont.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
view{
    box-sizing: border-box;
}
.iconfont {
    display: inline;   
}

.hat {
    position: relative;
}

.hat::before {
    width: 100%;
    height: 40rpx;
    border-radius: 40rpx 40rpx 0px 0px;
    position: absolute;
    content: '';
    display: block;
    bottom: 0;
    left: 0;
    background: #fff;
}

