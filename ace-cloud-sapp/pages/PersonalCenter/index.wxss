.index{
    padding-bottom: 80rpx;
}
.baseInfo {
    height: 280rpx;
    padding: 0 40rpx 40rpx;
    line-height: 20px;
    background-color: rgba(46, 136, 242, 1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: rgba(255, 255, 255, 1);
}

.baseInfo .headImg {
    margin-right: 30rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 4rpx solid rgba(255, 255, 255, 0.16);
}

.baseInfo .left {
    display: flex;
    align-items: center;
}

.baseInfo .left .name {
    font-size: 40rpx;
    font-family: PingFangSC-bold;
    font-weight: bold;
}

.baseInfo .left .tip {
    height: 36rpx;
    line-height: 36rpx;
    border-radius: 18rpx;
    padding: 0 16rpx;
    background-color: rgba(148, 197, 255, 1);
    color: rgba(46, 136, 242, 1);
    font-size: 20rpx;
    text-align: center;
    font-family: Arial;
    margin-top: 16rpx;
}

.baseInfo .right {
    padding-top: 30rpx;
}

.baseInfo .right .coin {
    font-size: 28rpx;
    text-align: right;
    font-family: PingFangSC-bold;
    font-weight: bold;
}

.baseInfo .right .center {
    font-size: 20rpx;
    font-family: Arial;
    display: flex;
    align-items: center;
}

.column {
    padding: 0 40rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: rgba(28, 40, 67, 1);
    font-size: 32rpx;
    font-family: PingFangSC-bold;
    font-weight: bold;
}

.entrance {
    padding: 14rpx 40rpx 36rpx;
    display: flex;
    flex-wrap: wrap;
}

.entrance .item {
    width: 150rpx;
    display: flex;
    margin-right: 22rpx;
    margin-bottom: 30rpx;
    align-items: center;
    flex-direction: column;
    color: rgba(28, 40, 67, 1);
    font-size: 24rpx;
    font-family: PingFangSC-regular;
}

.entrance .item:nth-child(4n+4) {
    margin-right: 0;
}

.entrance .item .title {
    margin-top: 6rpx;
    color: rgba(16, 16, 16, 1);
    font-size: 28rpx;
    text-align: center;
    font-family: Arial;
}

.binding {
    width: 674rpx;
    padding: 40rpx 0;
    border-radius: 12rpx;
    background-color: rgba(247, 249, 252, 0.86);
    text-align: center;
    margin: auto;
    color: rgba(160, 167, 182, 1);
    font-size: 22rpx;
    font-family: PingFangSC-regular;
}

.binding .btn {
    width: 414rpx;
    height: 76rpx;
    margin: 20rpx auto 0;
}

.van-button--large {
    height: 76rpx !important;
}

.other {
    padding: 20rpx 40rpx 0;
    color: rgba(121, 128, 146, 1);
    font-size: 28rpx;
    font-family: PingFangSC-regular;
}

.signOut {
    width: 540rpx;
    margin: 120rpx auto 0;
    height: 74rpx;
    font-size: 28rpx;
    font-family: Microsoft Yahei;
}

.signOut .van-button--hairline.van-button--round::after {
    border-color: rgba(160, 167, 182, 1) !important;
}

.signOut .van-button__text {
    color: rgba(160, 167, 182, 1);
}
