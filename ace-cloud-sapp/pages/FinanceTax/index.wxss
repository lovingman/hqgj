/* pages/FinanceTax/index.wxss */
.index{
    background: #FFFFFF ;
}
.van-tabs__scroll--line {
    background: #4b90ff !important;
}

.van-tabs__line {
    bottom: 4px !important;
}

.wrap {
    width: 710rpx;
    margin: 40rpx auto 0;
    border-radius: 12rpx;
    background-color: rgba(247, 249, 252, 0.37);
    display: flex;
    padding: 28rpx 20rpx 28rpx 32rpx;
    justify-content: space-between;
}

.wrap .img {
    width: 124rpx;
    height: 124rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.wrap .text {
    width: 510rpx;
}

.wrap .title {
    color: rgba(28, 40, 67, 1);
    font-size: 28rpx;
    font-weight: bold;
    font-family: PingFangSC-bold;
    line-height: 1.5em;
}

.wrap .subTitle {
    overflow: hidden;
    color: rgba(160, 167, 182, 1);
    font-size: 22rpx;
    font-family: PingFangSC-regular;
    line-height: 1.5em;
}

.wrap .bottom {
    display: flex;
    justify-content: space-between;
    padding-right: 50rpx;
    margin-top: 14rpx;
}

.wrap .bottom .sign {
    color: rgba(255, 125, 24, 1);
    font-size: 24rpx;
    font-family: Arial;
}
