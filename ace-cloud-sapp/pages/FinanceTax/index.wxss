/* pages/FinanceTax/index.wxss */

.index {
    background: #fff;
}

.van-tabs__nav {
    background: #2E88F2;
}

.van-tabs__line {
    bottom: 10rpx !important;
}

.wrap {
    width: 710rpx;
    margin: 40rpx auto 0;
    border-radius: 12rpx;
    background-color: rgba(247, 249, 252, 0.37);
    display: flex;
    padding: 28rpx 20rpx 28rpx 32rpx;
    justify-content: space-between;
}

.wrap .img {
    width: 124rpx;
    height: 124rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.wrap .text {
    width: 510rpx;
}

.wrap .title {
    color: rgba(28, 40, 67, 1);
    font-size: 28rpx;
    font-weight: bold;
    font-family: PingFangSC-bold;
    line-height: 1.5em;
}

.wrap .subTitle {
    overflow: hidden;
    color: rgba(160, 167, 182, 1);
    font-size: 22rpx;
    font-family: PingFangSC-regular;
    line-height: 1.5em;
}

.wrap .bottom {
    display: flex;
    justify-content: space-between;
    padding-right: 50rpx;
    margin-top: 14rpx;
}

.wrap .bottom .sign {
    color: rgba(255, 125, 24, 1);
    font-size: 24rpx;
    font-family: Arial;
    display: flex;
    align-items: center;
}

.wrap .bottom .sign .iconfont {
    margin-right: 6rpx;
    font-size: 26rpx;
    display: inline-flex;
}

.wrap .bottom .fine {
    width: 128rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: erpx;
    background-color: rgba(255, 232, 220, 0.42);
    color: rgba(255, 125, 24, 1);
    font-size: 24rpx;
    text-align: center;
}

.loadState{
    color: rgba(121, 128, 146, 1);
    height: 50rpx;
    font-size: 28rpx;
    line-height: 50rpx;
    text-align: center;
}
