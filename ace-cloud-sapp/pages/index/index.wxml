<!--index.wxml-->
<view class="index">
  <view class="banner hat">
    <view class="left van-hairline--right">
      <van-image width="70rpx" height="70rpx" fit="cover" src="/assets/image/logo.png" />慧企管家
    </view>
    <view class="right">
      <view>
        常德市武陵区中小企业服务平台
      </view>
      <view>
        常德市武陵区工信局指定平台
      </view>
    </view>
  </view>
  <view class="entrance">
    <block wx:for="{{navigates}}" wx:key="index">
      <navigator class="item" url="{{item.path}}">
        <van-image info="5" round width="90rpx" height="90rpx" fit="cover" src="{{item.imgUrl}}" />
        <view class="title">
          {{item.text}}
        </view>
      </navigator>
    </block>
  </view>
  <view class="popular">
    <view class="headTitle">
      热门培训
      <van-icon name="fire" />
    </view>
    <swiper class="swiper" indicator-dots="{{true}}" autoplay="{{true}}">
      <swiper-item wx:for="{{trainList}}" wx:key="{{index}}" wx:for-item="item" catchtap="lawServeClcik" data-index='{{index}}'>
        <view class="swiper-content">
          <view class="title van-multi-ellipsis--l2">
            {{item.title}}
          </view>
          <view class="remark">
            <view class="base">
              <van-icon name="clock-o" />{{item.startDate}}</view>
            <view class="num">仅剩{{item.surplusQuota}}个名额</view>
          </view>
        </view>
      </swiper-item>
      <!-- <swiper-item>
        <view class="swiper-content">
          <view class="title van-multi-ellipsis--l2">
            《全面提升逻辑思维能力--结构化思维及在
          </view>
          <view class="remark">
            <view>王麒麟10.18 14:00-16:00</view>
            <view>仅剩5个名额</view>
          </view>
        </view>
      </swiper-item> -->
    </swiper>
  </view>
  <view class="news" id="container">
    <van-sticky container="{{ container }}">
      <view class="title">
        最新政策
      </view>
    </van-sticky>
    <view class="list" wx:for="{{lawServeList}}" wx:key="{{index}}" wx:for-item="item" catchtap="lawServeClcik" data-index='{{index}}'>
      <view class="text">
        {{item.title}}
      </view>
      <view class="time">
        {{item.createDate}}
      </view>
    </view>
  </view>
</view>