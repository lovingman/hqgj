/* pages/ SignIn/index.wxss */

.banner {
    width: 100%;
    height: 310rpx;
    background-color: rgba(46, 136, 242, 1);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-bottom: 40rpx;
    color: rgba(255, 255, 255, 1);
    font-size: 40rpx;
    font-family: PingFangSC-regular;
}

.content {
    width: 650rpx;
    margin: auto;
    padding-top: 40rpx;
}

.content .input {
    height: 96rpx;
    margin-bottom: 22rpx;
}

.content .btn {
    margin-top: 84rpx;
}

.content .other {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
}

.content .other button {
    margin: 0;
    background: #fff;
    color: rgba(160, 167, 182, 1);
    font-size: 28rpx;
    font-family: PingFangSC-regular;
}

.content .other button:first-child {
    color: #1c2843;
}

button::after {
    border: none;
}

.wechat {
    width: 80rpx;
    height: 80rpx;
    border: 4rpx solid #58c45e;
    border-radius: 50%;
    position: fixed;
    bottom: 10%;
    left: 50%;
    transform: translate(-50%, 0);
    display: flex;
    justify-content: center;
    align-items: center;
}

.wechat icon {
    font-size: 50rpx;
    color: #58c45e;
}
