/* pages/FinanceTax/index.wxss */

.index {
    background: #fff;
}

.van-tabs__nav {
    background: #2E88F2;
}

.van-tabs__line {
    bottom: 10rpx !important;
}

.wrap {
    width: 710rpx;
    margin: 40rpx auto 0;
    border-radius: 12rpx;
    background-color: rgba(247, 249, 252, 0.37);
    display: flex;
    padding: 28rpx 20rpx 28rpx 32rpx;
    justify-content: space-between;
}

.wrap .img {
    width: 124rpx;
    height: 124rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.wrap .text {
    width: 510rpx;
}

.wrap .title {
    color: rgba(28, 40, 67, 1);
    font-size: 28rpx;
    font-weight: bold;
    font-family: PingFangSC-bold;
    line-height: 1.5em;
}

.wrap .subTitle {
    overflow: hidden;
    color: rgba(160, 167, 182, 1);
    font-size: 22rpx;
    font-family: PingFangSC-regular;
    line-height: 1.5em;
}

.wrap .bottom {
    display: flex;
    justify-content: space-between;
    padding-right: 50rpx;
    margin-top: 14rpx;
}

.wrap .bottom .sign {
    color: rgba(255, 125, 24, 1);
    font-size: 24rpx;
    font-family: Arial;
    display: flex;
    align-items: center;
}

.wrap .bottom .sign .iconfont {
    margin-right: 6rpx;
    display: inline-flex;
    font-size: 26rpx;
}

.search {
    height: 200rpx;
    background: #2E88F2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.search .title {
    color: rgba(255, 255, 255, 1);
    font-size: 36rpx;
    font-family: PingFangSC-regular;
    margin-bottom: 16rpx;
}

.search .van-search {
    width: 600rpx;
    padding: 0px;
}

.files {
    background: #f7f9fc;
    padding-bottom: 80rpx;
}

.files .title {
    padding: 0 30px;
    height: 100rpx;
    line-height: 100rpx;
    color: rgba(51, 51, 51, 1);
    font-size: 30rpx;
    font-family: PingFangSC-bold;
    font-weight: bold;
}

.files .file {
    width: 690rpx;
    background: #fff;
    padding: 24rpx 24rpx;
    margin: 0 auto 24rpx;
}

.files .file .name {
    color: rgba(0, 0, 0, 1);
    font-size: 24rpx;
    font-family: PingFangSC-regular;
}

.files .file .other {
    color: rgba(121, 128, 146, 1);
    font-size: 20rpx;
    font-family: PingFangSC-regular;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 12rpx;
}

.files .file .other .download {
    color: rgba(75, 144, 255, 1);
    font-size: 22rpx;
    padding: 10rpx 0 10rpx 30rpx;
}
