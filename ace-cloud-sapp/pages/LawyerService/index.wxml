<!--pages/FinanceTax/index.wxml-->
<view class="index">
  <van-tabs border="{{false}}" line-width="30" color="#ffffff" sticky animated swipeable active="{{ active }}" bind:change="tabClick">
    <van-tab title-style="color:#ffffff" title="律师事务所">
      <view class="wrap" wx:for="{{listArr}}" wx:key="{{index}}" wx:for-item="item" bindtap="listClcik" data-index='{{index}}'>
        <view class="img">
          <van-image width="100%" height="100%" lazy-load fit="cover" src="{{item.fmUrl}}" />
        </view>
        <view class="text">
          <view class="title van-ellipsis">
            {{item.orgName}}
          </view>
          <view class="subTitle van-ellipsis">
            {{item.content}}
          </view>
          <view class="bottom">
            <view class="sign">
              <icon class="iconfont icon-yirenzheng"></icon>已认证</view>
          </view>
        </view>
      </view>
    </van-tab>
    <van-tab title-style="color:#ffffff" title="法律模板">
      <view class="search">
        <view class="title">大家都在下载的法律合同模板</view>
        <van-search background="#4b90ff" use-left-icon-slot clearable shape="round" right-icon="search" value="{{ value }}" placeholder="搜索模板名称" bind:change="onChange" bind:search="onSearch">
        </van-search>
      </view>
      <view class="files">
        <view class="title">
          全部模板（{{basicLength}}）
        </view>
        <view class="file" wx:for="{{basicAnnexArr}}" wx:key="{{index}}" wx:for-item="item" catchtap='openFile' data-src='{{item.fileURL}}'>
          <view class="name">
            {{item.fileName}}
          </view>
          <view class="other">
            <view>{{item.createDate}} </view>
            <view data-url='{{item.fileURL}}' catchtap="downloadFile" class="download">下载</view>
          </view>
        </view>
      </view>
    </van-tab>
  </van-tabs>
  <view wx:if="{{isload}}" class="loadState">已经没有了</view>
  <view wx:if="{{loading}}" class="loadState">正在加载中</view>
</view>