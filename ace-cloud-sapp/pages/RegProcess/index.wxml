<view class="index">
  <van-tabs sticky animated swipeable active="{{ active }}">
    <van-tab title="基本信息">
      <view>
        <van-cell-group class="style1">
          <van-field value="{{ serveBusiness.companyName }}" data-obj="serveBusiness" data-model="companyName" bind:input="bindinput" clearable label="企业名称" placeholder="请输入企业名称" />
          <van-field value="{{ serveBusiness.readyName }}" data-obj="serveBusiness" data-model="readyName" bind:input="bindinput" label="备用名称" placeholder="请输入企业备用名称" />
          <van-field value="{{ serveBusiness.regBonus }}" data-obj="serveBusiness" data-model="regBonus" bind:input="bindinput" label="注册资金" placeholder="请输入金额" border="{{ false }}" use-button-slot>
            <van-button slot="button" size="small" type="primary">万元</van-button>
          </van-field>
        </van-cell-group>
        <van-cell-group>
          <van-cell title="企业地址" data-obj="serveBusiness" value="{{ serveBusiness.areaType }}" bind:input="bindinput" size="large" bind:click="showPickerArea" />
          <!-- <van-field readonly clickable label="企业地址" :value="value" placeholder="请选择区域"  bind:click="showPickerArea" /> -->
          <van-field class="textarea" value="{{ serveBusiness.companyAddress }}" data-obj="serveBusiness" data-model="companyAddress" bind:input="bindinput" placeholder="请输入详细地址，XX路XX号(XX小区XX栋XX楼XX号）" border="{{ false }}" type="textarea" autosize />
        </van-cell-group>
        <van-cell-group>
          <van-field readonly clickable label="经营范围" bind:click="showPicker = true" />
          <van-field class="textarea" value="{{ serveBusiness.manageExtent }}" data-obj="serveBusiness" data-model="manageExtent" bind:input="bindinput" placeholder="请输入经营范围" border="{{ false }}" type="textarea" autosize />
        </van-cell-group>
      </view>
      <view class="button_1">
        <van-button round type="info" size="large" bindtap="nextClick">下一步</van-button>
      </view>
    </van-tab>
    <van-tab title="法人、监事">
      <view class="model">
        <view class="title">
          法人
        </view>
        <van-cell-group>
          <van-field value="{{ legalPerson.name }}" data-obj="legalPerson" data-model="name" bind:input="bindinput" clearable label="法人姓名" placeholder="请输入真实姓名" />
          <van-field value="{{ legalPerson.mobile }}" data-obj="legalPerson" data-model="mobile" bind:input="bindinput" label="联系电话" placeholder="请输入联系电话" />
        </van-cell-group>
        <view class="upload">
          <view class="text">
            <view>身份证</view>
            <view class="tip">拍摄要求</view>
          </view>
          <view class="imgs">
            <view class="img">
              <image wx:if="{{legalPerson.basicAnnexes[0].fileType==1}}" src="{{legalPerson.basicAnnexes[0].fileURL}}"></image>
              <image wx:if="{{legalPerson.basicAnnexes[1].fileType==1}}" src="{{legalPerson.basicAnnexes[1].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="legalPerson" data-file="1" bind:after-read="afterRead">
              </van-uploader>
              <text>拍摄/上传正面</text>
            </view>
            <view class="img">
              <image wx:if="{{legalPerson.basicAnnexes[0].fileType==2}}" src="{{legalPerson.basicAnnexes[0].fileURL}}"></image>
              <image wx:if="{{legalPerson.basicAnnexes[1].fileType==2}}" src="{{legalPerson.basicAnnexes[1].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="legalPerson" data-file="2" bind:after-read="afterRead">
              </van-uploader>
              <text>拍摄/上传国徽面</text>
            </view>
          </view>
        </view>
      </view>
      <view class="model">
        <view class="title">
          监事
        </view>
        <van-cell-group>
          <van-field value="{{ supervisor.name }}" value="{{ supervisor.name }}" data-obj="supervisor" data-model="name" bind:input="bindinput" clearable label="监事姓名" placeholder="请输入真实姓名" />
          <van-field value="{{ supervisor.mobile }}" data-obj="supervisor" data-model="mobile" bind:input="bindinput" label="联系电话" placeholder="请输入联系电话" />
        </van-cell-group>
        <view class="upload">
          <view class="text">
            <view>身份证</view>
            <view class="tip">拍摄要求</view>
          </view>
          <view class="imgs">
            <view class="img">
              <image wx:if="{{supervisor.basicAnnexes[0].fileType==1}}" src="{{supervisor.basicAnnexes[0].fileURL}}"></image>
              <image wx:if="{{supervisor.basicAnnexes[1].fileType==1}}" src="{{supervisor.basicAnnexes[1].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="supervisor" data-file="1" bind:after-read="afterRead">
              </van-uploader>
              <text>拍摄/上传正面</text>
            </view>
            <view class="img">
              <image wx:if="{{supervisor.basicAnnexes[0].fileType==2}}" src="{{supervisor.basicAnnexes[0].fileURL}}"></image>
              <image wx:if="{{supervisor.basicAnnexes[1].fileType==2}}" src="{{supervisor.basicAnnexes[1].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="supervisor" data-file="2" bind:after-read="afterRead">
              </van-uploader>
              <text>拍摄/上传国徽面</text>
            </view>
          </view>
        </view>
      </view>
      <view class="button_2">
        <view class="btn">
          <van-button round hairline plain size="large" type="info" bindtap="preClick">上一步</van-button>
        </view>
        <view class="btn">
          <van-button round type="info" size="large" bindtap="nextClick">下一步</van-button>
        </view>
      </view>
    </van-tab>
    <van-tab title="股东">
      <view>
        <view class="model" wx:for="{{shareholder}}" wx:key="index" wx:for-item="item">
          <view class="title">
            股东{{index+1}}
          </view>
          <van-cell-group>
            <van-field value="{{ item.name }}" data-index="{{index}}" data-model="name" bind:input="bindinputs" clearable label="股东姓名" placeholder="请输入真实姓名" />
            <van-field value="{{ item.sharesProportion }}" data-index="{{index}}" data-model="sharesProportion" bind:input="bindinputs" label="股东比例" placeholder="请输入数值" border="{{ false }}" use-button-slot>
              <van-button slot="button" size="small" type="primary">%</van-button>
            </van-field>
          </van-cell-group>
          <view class="upload">
            <view class="text">
              <view>身份证</view>
              <view class="tip">拍摄要求</view>
            </view>
            <view class="imgs">
              <view class="img">
                <image wx:if="{{item.basicAnnexes[0].fileType==1}}" src="{{item.basicAnnexes[0].fileURL}}"></image>
                <image wx:if="{{item.basicAnnexes[1].fileType==1}}" src="{{item.basicAnnexes[1].fileURL}}"></image>
                <van-uploader class="van-uploaders" data-index="{{index}}" data-obj="shareholder" data-file="1" bind:after-read="afterRead">
                </van-uploader>
                <text>拍摄/上传正面</text>
              </view>
              <view class="img">
                <image wx:if="{{item.basicAnnexes[0].fileType==2}}" src="{{item.basicAnnexes[0].fileURL}}"></image>
                <image wx:if="{{item.basicAnnexes[1].fileType==2}}" src="{{item.basicAnnexes[1].fileURL}}"></image>
                <van-uploader class="van-uploaders" data-index="{{index}}" data-obj="shareholder" data-file="2"  bind:after-read="afterRead">
                </van-uploader>
                <text>拍摄/上传国徽面</text>
              </view>
            </view>
          </view>
        </view>
      </view>

      <view class="button_3">
        <van-button type="info" color="#E1EEFD" size="large" bindtap="addShareholder">+添加股东</van-button>
      </view>

      <view class="button_2">
        <view class="btn">
          <van-button round hairline plain size="large" type="info" bindtap="preClick">上一步</van-button>
        </view>
        <view class="btn">
          <van-button round type="info" size="large" bindtap="nextClick">下一步</van-button>
        </view>
      </view>
    </van-tab>
    <van-tab title="财务">
      <view class="model">
        <view class="title">
          财务
        </view>
        <van-cell-group>
          <van-field value="{{ finance.name }}" data-obj="finance" data-model="name" bind:input="bindinput" clearable label="财务姓名" placeholder="请输入真实姓名" />
          <van-field value="{{ finance.mobile }}" data-obj="finance" data-model="mobile" bind:input="bindinput" label="联系电话" placeholder="请输入联系电话" />
        </van-cell-group>
        <view class="upload">
          <view class="text">
            <view>身份证</view>
            <view class="tip">拍摄要求</view>
          </view>
          <view class="imgs">
            <view class="img">
              <image wx:if="{{finance.basicAnnexes[0].fileType==1}}" src="{{finance.basicAnnexes[0].fileURL}}"></image>
              <image wx:if="{{finance.basicAnnexes[1].fileType==1}}" src="{{finance.basicAnnexes[1].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="finance" data-file="1" bind:after-read="afterRead">
              </van-uploader>
              <text>拍摄/上传正面</text>
            </view>
            <view class="img">
              <image wx:if="{{finance.basicAnnexes[0].fileType==2}}" src="{{finance.basicAnnexes[0].fileURL}}"></image>
              <image wx:if="{{finance.basicAnnexes[1].fileType==2}}" src="{{finance.basicAnnexes[1].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="finance" data-file="2" bind:after-read="afterRead">
              </van-uploader>
              <text>拍摄/上传国徽面</text>
            </view>
          </view>
        </view>
      </view>
      <view class="button_2">
        <view class="btn">
          <van-button round hairline plain size="large" type="info" bindtap="preClick">上一步</van-button>
        </view>
        <view class="btn">
          <van-button round type="info" size="large" bindtap="nextClick">下一步</van-button>
        </view>
      </view>
    </van-tab>
    <van-tab title="房屋证明">
      <view class="model">
        <view class="title">
          <view class="text">
            <text>房产证复印件房产证复印件房复印件房产证复印件</text>
            <text class="tip">范例</text>
          </view>
          <view class="subtitle">（没有房产证提供购房合同和竣工验收证明，非商业性质的房屋提 供社区证明）
          </view>
        </view>
        <view class="upload">
          <view class="imgs">
            <view class="img">
              <image  src="{{contract1.basicAnnexes[0].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="contract1" bind:after-read="afterRead">
              </van-uploader>
            </view>
          </view>
        </view>
      </view>
      <view class="model">
        <view class="title">
          <view class="text">
            <text>房东为某某公司或单位的需提交房东营业执照（法人证书）复印件加盖公章</text>
            <text class="tip">范例</text>
          </view>
        </view>
        <view class="upload">
          <view class="imgs">
            <view class="img">
              <image  src="{{contract2.basicAnnexes[0].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="contract2" bind:after-read="afterRead">
              </van-uploader>
            </view>
          </view>
        </view>
      </view>
      <view class="model">
        <view class="title">
          <view class="remark">说明：以下资料，根据实际情况提交一种即可</view>
          <view class="text">
            <text><text class="option">（选填）</text>租赁合同复印件（或照片）</text>
            <text class="tip">范例</text>
          </view>
        </view>
        <view class="upload">
          <view class="imgs">
            <view class="img">
              <image  src="{{contract3.basicAnnexes[0].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="contract3" bind:after-read="afterRead">
              </van-uploader>
            </view>
          </view>
        </view>
      </view>

      <view class="model">
        <view class="title">
          <view class="text">
            <text><text class="option">（选填）</text>房屋归股东所有且无偿提供给新设公司使用的，需提供“房屋无偿提供使用证明”</text>
            <text class="tip">范例</text>
          </view>
        </view>
        <view class="upload">
          <view class="imgs">
            <view class="img">
              <view class="img">
              <image  src="{{contract4.basicAnnexes[0].fileURL}}"></image>
              <van-uploader class="van-uploaders" data-obj="contract4" bind:after-read="afterRead">
              </van-uploader>
            </view>
            </view>
          </view>
        </view>
      </view>
      <view class="button_2">
        <view class="btn">
          <van-button round hairline plain size="large" type="info" bindtap="preClick">上一步</van-button>
        </view>
        <view class="btn">
          <van-button round type="info" size="large" bindtap="nextClick">下一步</van-button>
        </view>
      </view>
    </van-tab>
    <van-tab title="其他">
      <view class="model">
        <view class="title">
          <view class="text">
            <text>申请免费服务项目</text>
          </view>
        </view>
        <view class="upload">
          <van-checkbox-group value="{{ result }}">
            <van-cell-group>
              <van-cell>
                <van-checkbox shape="square" name="a">工商注册代办服务（含公章一套）</van-checkbox>
              </van-cell>
              <van-cell>
                <van-checkbox shape="square" name="b">银行基本开户代办服务</van-checkbox>
              </van-cell>
              <van-cell>
                <van-checkbox shape="square" name="c">银行开户费、小额账户管理费</van-checkbox>
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </view>
      <view class="model">
        <view class="title">
          <view class="text">
            <text>确定培训意向</text>
          </view>
        </view>
        <view class="upload">
          <van-checkbox-group value="{{ result }}">
            <van-cell-group>
              <van-cell>
                <van-checkbox shape="square" name="a">是否愿意参加创业培训</van-checkbox>
              </van-cell>
              <van-cell>
                <van-checkbox shape="square" name="b">是否愿意加入创业孵化基地</van-checkbox>
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </view>

      <view class="model">
        <view class="title">
          <view class="text">
            <text>银行开户费、小额账户管理费免费确认单</text>
          </view>
        </view>
        <view class="upload">
          <van-checkbox-group value="{{ result }}">
            <van-cell-group>
              <van-cell>
                <van-checkbox shape="square" name="a">兴业银行各分行</van-checkbox>
              </van-cell>
              <van-cell>
                <van-checkbox shape="square" name="b">交通银行德景园分行</van-checkbox>
              </van-cell>
              <van-cell>
                <van-checkbox shape="square" name="b">建设银行紫陵路分行</van-checkbox>
              </van-cell>
              <van-cell>
                <van-checkbox shape="square" name="b">长沙银行柳叶大道总行</van-checkbox>
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </view>

      <view class="model">
        <view class="title">
          <view class="text">
            <text>是否选择代理记账服务</text>
          </view>
        </view>
        <view class="upload">
          <van-checkbox-group value="{{ result }}">
            <van-cell-group>
              <van-cell>
                <van-checkbox shape="square" name="a">选择武陵区中小企业公共服务平台推荐的代理记账机构，合作条款及收费详见合同；</van-checkbox>
              </van-cell>
              <van-cell>
                <van-checkbox shape="square" name="b">有关会计及报税工作自行负责，如产生税务申报逾期等相关责任自行承担。</van-checkbox>
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
        </view>
      </view>
      <view class="model">
        <view class="title">
          <view class="text">
            <text>特殊说明</text>
          </view>
        </view>
        <view class="upload">
          <van-cell-group>
            <van-field class="textarea" value="{{ message }}" type="textarea" placeholder="字数限制在50以内" autosize border="{{ false }}" />
          </van-cell-group>
        </view>
      </view>
      <view class="button_2">
        <view class="btn">
          <van-button round hairline plain size="large" type="info" bindtap="preClick">上一步</van-button>
        </view>
        <view class="btn">
          <van-button round type="info" size="large" bindtap="submit">提交</van-button>
        </view>
      </view>
    </van-tab>
  </van-tabs>
  <van-popup show="{{showPickerAreas}}" position="bottom">
    <van-area area-list="{{ areaList }}" bind:cancel="cancelshowPickerArea" bind:confirm="confirms" />
    <!-- <van-picker show-toolbar :columns="columns" bind:cancel="cancelshowPickerArea" bind:confirm="cancelshowPickerArea"/> -->
  </van-popup>
</view>