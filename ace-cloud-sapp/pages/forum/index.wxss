
.index{
    height: 100%;
}



.navbar {
    width: 690rpx !important;
    margin: auto;
    height: 100%;
    white-space: nowrap;
    font-size: 28rpx;
    color: #666;
}

.topBar {
    z-index: 4;
    top: 0;
    position: fixed;
    width: 100%;
    height: 84rpx;
    border-bottom: 0.5px solid #ececec;
    background-color: #fff;
}

.navbar-item {
    display: inline-block;
    width: 25%;
    height: 100%;
}

.navbar-item-active {
    color: rgba(8,82,185,1);
    font-weight: bold;
    position: relative;
}

.navbar-item-active::after {
    content: '';
    display: block;
    position: absolute;
    width: 40rpx;
    height: 6rpx;
    background: rgba(8,82,185,1);
    bottom: 0;
    left: 66rpx;
}

.navbar-item-wrap {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
}

.swiper_box {
    height: 100%;
    padding-top: 84rpx;
    overflow-y: auto;
    position: relative;
}

.swiper_box swiper{
    height: 100%;
}

.activity-list{
    height: 100%;
    overflow-y: auto;
}


.list-style {
    padding: 30rpx 30rpx;
    background: #fff;
}

.list-style .title {
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(34, 34, 34, 1);
}

.list-style .detail {
    font-size: 26rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
    display: flex;
    justify-content: space-between;
    width: 478rpx;
}

.list-style-1 {
    display: flex;
    justify-content: space-between;
}

.list-style-1 .right {
    width: 186rpx;
    height: 146rpx;
    overflow: hidden;
}

.list-style-1 .right image {
    width: 100%;
    height: 100%;
}

.list-style-1 .left {
    width: 478rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
