<view>
  <van-sticky>
    <view class="header">
      已报名({{enrollNumll}})
      <view class="contor">
        <van-checkbox value="{{ checked }}" bind:change="onChange">全选</van-checkbox>
        <button class="button">签到</button>
      </view>
    </view>
  </van-sticky>
  <van-checkbox-group value="{{ result }}" bind:change="onChange">
    <view class="modal van-hairline--bottom" wx:for="{{enrollForm}}" wx:key="{{index}}" wx:for-item="item" bindtap="listClcik" data-index='{{index}}'>
      <view class="select">
        <van-checkbox name="a" />
      </view>
      <view class="card">
        <view class="img">
          <van-image round width="100%" height="100%" fit="cover" src="{{item.fmUrl}}" />
        </view>
        <view class="info">
          <view class="name">{{item.name}}</view>
          <view class="org">{{item.companyName}}</view>
        </view>
      </view>
      <view class="phone" bindtap="telePhoneClick">
        <van-icon name="phone-circle-o" />
        <text style="display:none">{{item.enrollMobile}}</text>
      </view>
    </view>
  </van-checkbox-group>
</view>