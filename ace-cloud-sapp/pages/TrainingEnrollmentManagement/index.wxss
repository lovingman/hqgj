/* pages/TrainingEnrollmentManagement/index.wxss */

.header {
  display: flex;
  padding: 0 30rpx;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
  color: rgba(0, 0, 0, 1);
  font-size: 28rpx;
  font-family: PingFangSC-bold;
  font-weight: bold;
  background: #fff;
}

.header .contor {
  display: flex;
  align-items: center;
}

.header .contor .button {
  margin-left: 40rpx;
  background: transparent;
  color: rgba(46, 136, 242, 1);
  font-size: 28rpx;
  border-width: 0px;
  outline: none;
}

.header .contor .button::after {
  border: none;
}

.modal {
  display: flex;
  width: 690rpx;
  padding: 30rpx 0;
  margin: auto;
}

.modal .card {
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal .card .img {
  width: 96rpx;
  height: 96rpx;
}

.modal .card .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
  margin-left: 20rpx;
}

.modal .card .name {
  color: rgba(28, 40, 67, 1);
  font-size: 28rpx;
  font-family: PingFangSC-bold;
  font-weight: bold;
  line-height: 2em;
}

.modal .card .org {
  color: rgba(121, 128, 146, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  line-height: 2em;
}

.modal .select {
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 888;
}

.modal .phone {
  color: #4b90ff;
  font-size: 60rpx;
  display: flex;
  position: relative;
  align-items: center;
}

.modal .phone.nophone{
    color: #ccc;
}

.modal .phone .phone-number {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.check-box {
  padding-bottom: 100rpx;
  display: block;
}

.form-btn {
  margin-top: 40rpx;
  display: flex;
  padding: 20rpx 0;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.form-btn .btn-list {
  flex: 1;
}

.form-btn .btn-list .btn-btn {
  width: 240rpx;
  height: 60rpx;
  border-radius: 15rpx;
  background-color: #eee;
  color: #555;
  display: inline-block;
  text-align: center;
  line-height: 60rpx;
}

.form-btn .btn-list .btn-btn.determine {
  background-color: #4b90ff;
  color: #fff;
}
