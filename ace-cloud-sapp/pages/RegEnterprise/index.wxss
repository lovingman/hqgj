/* pages/EnterpriseReg/index.wxss */

.index {
    background-color: rgba(46, 136, 242, 1);
    padding: 100rpx 0 80rpx;
}

.title {
    color: rgba(255, 255, 255, 1);
    font-size: 56rpx;
    font-family: 方正综艺体-标准;
    text-align: center;
    line-height: 1.5em;
}

.subTitle {
    color: rgba(255, 255, 255, 1);
    font-size: 36rpx;
    font-family: SourceHanSansSC-bold;
    text-align: center;
    line-height: 1.5em;
    font-weight: bold;
    margin-bottom: 60rpx;
}

.wrap {
    width: 660rpx;
    border-radius: 20rpx;
    background: #fff;
    padding: 36rpx;
    margin: 0 auto 40rpx;
}

.wrap .title {
    color: rgba(46, 136, 242, 1);
    font-size: 28rpx;
    text-align: center;
    font-family: PingFangSC-bold;
    margin-bottom: 24rpx;
    font-weight: bold;
}

.wrap .subTitle {
    color: rgba(121, 128, 146, 1);
    font-size: 28rpx;
    font-family: PingFangSC-regular;
    text-align: left;
}

.wrap .text {
    color: rgba(28, 40, 67, 1);
    font-size: 28rpx;
    font-family: PingFangSC-bold;
    line-height: 1.5em;
    margin-top: 40rpx;
}

.wrap .li {
    padding-left: 60rpx;
    position: relative;
    margin-top: 24rpx;
}

.wrap  .li.van-hairline--left {
    margin: 0rpx;
    padding-bottom: 24rpx;
    margin-left: 15rpx;
    padding-left: 45rpx;
}

.wrap .remark {
    color: rgba(46, 136, 242, 1);
    font-size: 28rpx;
    font-family: PingFangSC-bold;
    margin-top: 40rpx;
}

.wrap  .li.defult {
    margin: 0rpx;
}

.wrap .li .tip {
    position: absolute;
    left: 0;
    top: 4rpx;
    width: 32rpx;
    height: 32rpx;
    text-align: center;
    z-index: 9999;
}

.wrap  .li.van-hairline--left .tip {
    position: absolute;
    left: -16rpx;
    top: 4rpx;
}

.wrap .li .subText {
    color: rgba(28, 40, 67, 1);
    font-size: 20rpx;
}

.van-hairline--surround::after {
    border-color: #2e88f2;
}

.icon-success {
    color: #2e88f2;
}

.icon-checked {
    color: #2e88f2;
    font-size: 30rpx;
}

.prompt {
    color: rgba(255, 255, 255, 0.37);
    font-size: 28rpx;
    text-align: center;
    font-family: PingFangSC-regular;
}

.button {
    width: 660rpx;
    margin: auto;
    margin-top: 110rpx;
}

.button .van-button {
    color: rgba(46, 136, 242, 1);
    font-size: 40rpx;
    font-family: Microsoft Yahei;
    font-weight: bold;
}
