<view>
    <van-dropdown-menu>
        <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
        <van-dropdown-item value="{{ value2 }}" options="{{ option2 }}" />
    </van-dropdown-menu>

    <view class="modal">
        <view class="card" wx:for="{{listArr}}" wx:key="{{index}}" wx:for-item="item" bindtap="listClcik" data-index='{{index}}'>
            <view class="img">
                <van-image width="100%" height="100%" fit="cover" src="{{item.fmUrl}}" />
            </view>
            <view class="info">
                <view class="name van-multi-ellipsis--l2">{{item.title}}</view>
                <view class="org">
                    <van-icon name="clock-o" />{{item.startDate}}
                    <view class="state">仅剩名额{{item.surplusQuota}}个</view>
                </view>
            </view>
        </view>
    </view>
</view>