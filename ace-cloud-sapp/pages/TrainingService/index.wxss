/* pages/TrainingService/index.wxss */

.modal {
  width: 700rpx;
  margin: 0 auto 34rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0px 5rpx 12rpx 0px rgba(228, 232, 238, 0.4);
  background: #fff;
}

.modal .card {
  padding: 28rpx 28rpx 0;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.modal .card .img {
  width: 124rpx;
  height: 124rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.modal .card .info {
  width: 500rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.modal .card .name {
  color: rgba(28, 40, 67, 1);
  font-size: 28rpx;
  font-family: PingFangSC-bold;
  font-weight: bold;
  line-height: 1.5em;
}

.modal .card .org {
  color: rgba(160, 167, 182, 1);
  font-size: 22rpx;
  font-family: PingFangSC-regular;
  display: flex;
  align-items: center;
}

.modal .card .state {
  color: rgba(46, 136, 242, 1);
  font-size: 22rpx;
  margin-left: auto;
  font-family: PingFangSC-regular;
}

.modal .card .state.greay {
  color: #aaa;
}

.modal .card .state.red {
  color: red;
}
