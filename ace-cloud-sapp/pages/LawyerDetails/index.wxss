/* pages/ExpertAppointment/index.wxss */

.org {
    padding: 24rpx;
    width: 710rpx;
    margin: 0 auto 28rpx;
    border-radius: 12rpx;
    background-color: rgba(247, 249, 252, 0.37);
    display: flex;
    justify-content: space-between;
}

.org .img {
    width: 124rpx;
    height: 124rpx;
}

.org .info {
    width: 520rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.org .info .info1 {
    display: flex;
    align-items: center;
}

.org .info .info1 .iconfont {
    margin-right: 4rpx;
    font-size: 22rpx;
    display: inline-flex;
}

.org .info .info1 .name {
    color: rgba(28, 40, 67, 1);
    font-size: 28rpx;
    font-family: PingFangSC-bold;
    font-weight: bold;
    line-height: 1.5em;
}

.org .info .info1 .sign {
    color: rgba(255, 125, 24, 1);
    font-size: 20rpx;
    font-family: Arial;
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.org .info .info2 {
    color: rgba(46, 136, 242, 1);
    font-size: 22rpx;
    font-family: PingFangSC-regular;
    line-height: 1.6em;
}

.mod {
    width: 700rpx;
    margin: auto;
    margin-bottom: 60rpx;
}

.mod .title {
    color: rgba(28, 40, 67, 1);
    font-size: 28rpx;
    font-weight: bold;
    font-family: PingFangSC-bold;
    margin-bottom: 20rpx;
    line-height: 1.5em;
}

.mod .text {
    color: rgba(121, 128, 146, 1);
    font-size: 28rpx;
    font-family: PingFangSC-regular;
    line-height: 1.5em;
}

.mod .textColor {
    color: #1c2843;
}

.mod .goodList {
    display: flex;
    flex-wrap: wrap;
}

.mod .goodList .item {
    left: 17px;
    top: 349px;
    width: 200rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 28rpx;
    color: rgba(46, 136, 242, 1);
    font-size: 12px;
    text-align: center;
    font-family: Arial;
    border: 1px solid rgba(46, 136, 242, 1);
    margin: 0 40rpx 26rpx 0;
}

.mod .goodList .item:nth-child(3n+3) {
    margin-right: 0;
}

.mod.last {
    padding-bottom: 150rpx;
}

.footer {
    width: 100%;
    padding: 20rpx 30rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    display: flex;
    justify-content: space-between;
}

.footer .btn {
    width: 540rpx;
}

.footer .btn .remark {
    font-size: 24rpx;
}

.footer .phone {
    color: rgba(28, 40, 67, 1);
    font-size: 28rpx;
    text-align: center;
    font-family: PingFangSC-bold;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.footer .phone .van-icon {
    color: #2e88f2;
    font-size: 40rpx;
    line-height: 40rpx;
}
